{
  "name": "store-manager",
  "version": "1.0.0",
  "description": "A retail store app for inventory and sales management",
  "main": "server.js",
  "scripts": {
    "test": "mocha --require babel-core/register ./api/tests/**/*.js --timeout 10000",
    "clear": "rm -rf build",
    "build": "npm run clear && babel server.js --out-dir build",
    "dev-start": "babel-watch server.js",
    "start": "babel-node server.js",
    "postinstall": "npm run build"
  },
  "author": "Olu Ajayi",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "pg": "^7.6.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0"
  }
}
